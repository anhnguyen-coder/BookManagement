@model BookManagement.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid">
        </div>
        <div class="col-md-7">
            <h1>@Model.Title</h1>
            <p class="text-muted">by @Model.Author</p>

            <div class="book-details">
                <p><strong>ISBN:</strong> @Model.ISBN</p>
                <p><strong>Language:</strong> @Model.Language</p>
                <p><strong>Published:</strong> @Model.DatePublished.ToShortDateString()</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            </div>

            <p class="mt-3">@Model.Description</p>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Back</a>
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary store-btn float-right ml-2">Add to Cart <i class="fa-solid fa-cart-plus"></i></a>
            </div>
        </div>
    </div>
</div>